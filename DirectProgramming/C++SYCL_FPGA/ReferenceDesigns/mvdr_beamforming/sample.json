
{
  "guid": "846806E2-4601-4081-87CC-93C84954A4F1",
  "name": "MVDR Beamforming",
  "categories": ["Toolkit/oneAPI Direct Programming/C++SYCL FPGA/Reference Designs"],
  "description": "A reference design demonstrating a high-performance streaming MVDR beamformer",
  "toolchain": ["icpx"],
  "os": ["linux", "windows"],
  "builder": ["ide", "cmake"],
  "targetDevice": ["FPGA"],
  "languages": [{"cpp":{}}],
  "commonFolder": {
    "base": "../..",
    "include": [
      "README.md",
      "ReferenceDesigns/mvdr_beamforming",
      "include"
    ],
    "exclude": []
  },
  "ciTests": {
    "linux": [
      {
        "id": "fpga_emu",
        "steps": [
          "icpx --version",
          "mkdir build",
          "cd build",
          "cmake ..",
          "make fpga_emu",
          "./mvdr_beamforming.fpga_emu --in=../data"
        ]
      },
      {
        "id": "report",
        "steps": [
          "icpx --version",
          "mkdir build",
          "cd build",
          "cmake ..",
          "make report"
        ]
      }
    ],
    "windows": [
      {
        "id": "fpga_emu",
        "steps": [
          "icpx --version",
          "cd ../..",
          "mkdir build",
          "cd build",
          "xcopy /E ..\\ReferenceDesigns\\mvdr_beamforming\\data ..\\data\\",
          "cmake -G \"NMake Makefiles\" ../ReferenceDesigns/mvdr_beamforming",
          "nmake fpga_emu",
          "mvdr_beamforming.fpga_emu.exe --in=../data"
        ]
      },
      {
        "id": "report",
        "steps": [
          "icpx --version",
          "cd ../..",
          "mkdir build",
          "cd build",
          "cmake -G \"NMake Makefiles\" ../ReferenceDesigns/mvdr_beamforming",
          "nmake report"
        ]
      }
    ]
  },
  "expertise": "Reference Designs and End to End"
}
