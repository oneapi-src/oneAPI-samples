  "name": "Host-Device Streaming using USM",
  "categories": ["Toolkit/oneAPI Direct Programming/C++SYCL FPGA/Tutorials/Design Patterns"],
  "description": "An FPGA tutorial demonstrating how to stream data between the host and device with low latency and high throughput",
  "toolchain": ["icpx"],
  "os": ["linux", "windows"],
  "targetDevice": ["FPGA"],
  "builder": ["ide", "cmake"],
  "languages": [{"cpp":{}}],
  "commonFolder": {
    "base": "../../..",
    "include": [
      "README.md",
      "Tutorials/DesignPatterns/simple_host_streaming",
      "include"
    ],
    "exclude": []
  },
  "ciTests": {
    "linux": [
      {
        "id": "fpga_emu",
        "steps": [
          "icpx --version",
          "mkdir build",
          "cd build",
          "cmake ..",
          "make fpga_emu",
          "./simple_host_streaming.fpga_emu"
        ]
      },
      {
        "id": "report",
        "steps": [
          "icpx --version",
          "mkdir build",
          "cd build",
          "cmake ..",
          "make report"
        ]
      }
    ],
    "windows": [
      {
        "id": "fpga_emu",
        "steps": [
          "icpx --version",
          "cd ../../..",
          "mkdir build",
          "cd build",
          "cmake -G \"NMake Makefiles\" ../Tutorials/DesignPatterns/simple_host_streaming",
          "nmake fpga_emu",
          "simple_host_streaming.fpga_emu.exe"
        ]
      },
      {
        "id": "report",
        "steps": [
          "icpx --version",
          "cd ../../..",
          "mkdir build",
          "cd build",
          "cmake -G \"NMake Makefiles\" ../Tutorials/DesignPatterns/simple_host_streaming",
          "nmake report"
        ]
      }
    ]
  },
  "expertise": "Code Optimization"
}

