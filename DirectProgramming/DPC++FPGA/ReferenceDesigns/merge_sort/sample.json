  "ciTests": {
    "linux": [
      {
        "id": "fpga_emu",
        "steps": [
          "dpcpp --version",
          "mkdir build",
          "cd build",
          "cmake ..",
          "make fpga_emu",
          "./merge_sort.fpga_emu"
        ]
      },
      {
        "id": "report",
        "steps": [
          "dpcpp --version",
          "mkdir build",
          "cd build",
          "cmake ..",
          "make report"
        ]
      }
    ],
    "windows": [
      {
        "id": "fpga_emu",
        "steps": [
          "dpcpp --version",
          "cd ../..",
          "mkdir build",
          "cd build",
          "cmake -G \"NMake Makefiles\" ../ReferenceDesigns/merge_sort",
          "nmake fpga_emu",
          "merge_sort.fpga_emu.exe"
        ]
      },
      {
        "id": "report",
        "steps": [
          "dpcpp --version",
          "cd ../..",
          "mkdir build",
          "cd build",
          "cmake -G \"NMake Makefiles\" ../ReferenceDesigns/merge_sort",
          "nmake report"
        ]
      }
    ]
