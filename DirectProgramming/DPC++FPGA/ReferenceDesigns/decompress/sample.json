  "description": "Optimized implementations of GZIP and SNAPPY decompression on an FPGA",
  "toolchain": ["dpcpp"],
  "os": ["linux", "windows"],
  "builder": ["ide", "cmake"],
  "targetDevice": ["FPGA"],
  "languages": [{"cpp":{}}],
  "ciTests": {
    "linux": [
      {
        "id": "fpga_emu_gzip",
        "steps": [
          "dpcpp --version",
          "mkdir build",
          "cd build",
          "cmake .. -DGZIP=1",
          "make fpga_emu",
          "./decompress.fpga_emu"
        ]
      },
      {
        "id": "fpga_emu_snappy",
        "steps": [
          "dpcpp --version",
          "mkdir build",
          "cd build",
          "cmake .. -DSNAPPY=1",
          "make fpga_emu",
          "./decompress.fpga_emu"
        ]
      },
      {
        "id": "report_gzip",
        "steps": [
          "dpcpp --version",
          "mkdir build",
          "cd build",
          "cmake .. -DGZIP=1",
          "make report"
        ]
      },
      {
        "id": "report_snappy",
        "steps": [
          "dpcpp --version",
          "mkdir build",
          "cd build",
          "cmake .. -DSNAPPY=1",
