
{
  "guid": "846806E2-4601-4081-87CC-93C84954A4F1",
  "name": "MVDR Beamforming",
  "categories": ["Toolkit/oneAPI Direct Programming/DPC++ FPGA/Reference Designs"],
  "description": "A reference design demonstrating a high-performance streaming MVDR beamformer",
  "toolchain": ["dpcpp"],
  "os": ["linux", "windows"],
  "builder": ["ide", "cmake"],
  "targetDevice": ["FPGA"],
  "languages": [{"cpp":{}}],
  "ciTests": {
    "linux": [
      {
        "id": "fpga_emu",
        "steps": [
          "mkdir build",
          "cd build",
          "cmake ..",
          "make fpga_emu",
          "./mvdr_beamforming.fpga_emu --in=../data"
        ]
      },
      {
        "id": "report",
        "steps": [
          "mkdir build",
          "cd build",
          "cmake ..",
          "make report"
        ]
      }
    ],
    "windows": [
      {
        "id": "fpga_emu",
        "steps": [
          "mkdir build",
          "cd build",
          "cmake -G \"NMake Makefiles\" ..",
          "nmake fpga_emu",
          "mvdr_beamforming.fpga_emu.exe --in=../data"
        ]
      },
      {
        "id": "report",
        "steps": [
          "mkdir build",
          "cd build",
          "cmake -G \"NMake Makefiles\" ..",
          "nmake report"
        ]
      }
    ]
  }
}
