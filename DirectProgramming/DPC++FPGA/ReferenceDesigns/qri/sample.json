  "description": "Reference design demonstrating high-performance QR based matrix inversion (QRI) of real and complex matrices on a IntelÂ® FPGA",
  "toolchain": ["dpcpp"],
  "os": ["linux", "windows"],
  "builder": ["ide", "cmake"],
  "targetDevice": ["FPGA"],
  "languages": [{"cpp":{}}],
  "ciTests": {
    "linux": [
      {
        "id": "fpga_emu",
        "env": [
          "export CL_CONFIG_CPU_FORCE_PRIVATE_MEM_SIZE=32MB"
        ],
        "steps": [
          "mkdir build",
          "cd build",
          "cmake ..",
          "make fpga_emu",
          "./qrd.fpga_emu"
        ]
      },
      {
        "id": "report",
        "steps": [
          "mkdir build",
          "cd build",
          "cmake ..",
          "make report"
        ]
      }
    ],
    "windows": [
      {
        "id": "fpga_emu",
        "env": [
          "set CL_CONFIG_CPU_FORCE_PRIVATE_MEM_SIZE=32MB"
        ],
        "steps": [
          "mkdir build",
          "cd build",
          "cmake -G \"NMake Makefiles\" ..",
          "nmake fpga_emu",
          "qrd.fpga_emu.exe"
        ]
      },
      {
        "id": "report",
        "steps": [
          "mkdir build",
          "cd build",
          "cmake -G \"NMake Makefiles\" ..",
          "nmake report"
        ]
      }
    ]
  }
}
