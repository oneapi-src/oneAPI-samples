{
  "guid": "A211FDE2-B037-4069-BD84-C45E354798B7",
  "name": "FPGA Compile",
  "categories": ["Toolkit/oneAPI Direct Programming/DPC++ FPGA/Getting Started Tutorials"],
  "description": "Intel® FPGA tutorial introducing how to compile Intel® oneAPI Data Parallel C++ (DPC++) for Intel® FPGA",
  "toolchain": ["dpcpp"],
  "os": ["linux", "windows"],
  "targetDevice": ["FPGA"],
  "builder": ["ide", "cmake"],
  "languages": [{"cpp":{}}],
  "ciTests": {
    "linux": [
      {
        "id": "fpga_emu",
        "steps": [
          "mkdir build",
          "cd build",
          "cmake ..",
          "make fpga_emu",
          "./fpga_compile.fpga_emu"
        ]
      },
      {
        "id": "report",
        "steps": [
          "mkdir build",
          "cd build",
          "cmake ..",
          "make report"
        ]
      }
    ],
    "windows": [
      {
        "id": "fpga_emu",
        "steps": [
          "mkdir build",
          "cd build",
          "cmake -G \"NMake Makefiles\" ..",
          "nmake fpga_emu",
          "fpga_compile.fpga_emu.exe"
        ]
      },
      {
        "id": "report",
        "steps": [
          "mkdir build",
          "cd build",
          "cmake -G \"NMake Makefiles\" ..",
          "nmake report"
        ]
      }
    ]
  }
}
