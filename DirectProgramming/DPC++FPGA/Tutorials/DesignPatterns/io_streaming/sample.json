  "ciTests": {
    "linux": [
      {
        "id": "fpga_emu",
        "steps": [
          "mkdir build",
          "cd build",
          "cmake ..",
          "make fpga_emu",
          "./io_streaming.fpga_emu"
        ]
      },
      {
        "id": "report",
        "steps": [
          "mkdir build",
          "cd build",
          "cmake ..",
          "make report"
        ]
      }
    ],
    "windows": [
      {
        "id": "fpga_emu",
        "steps": [
          "mkdir build",
          "cd build",
          "cmake -G \"NMake Makefiles\" ..",
          "nmake fpga_emu",
          "io_streaming.fpga_emu.exe"
        ]
      },
      {
        "id": "report",
        "steps": [
          "mkdir build",
          "cd build",
